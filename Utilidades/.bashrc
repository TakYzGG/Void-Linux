# <-Configuracion de Bash->

# Pront
PS1='[\[\e[95m\]\u\[\e[94m\] \w\[\e[0m\]]\[\e[91m\]\\$\[\e[0m\] ' 

# <-Alias->
# Colores
alias ls='ls --color=auto'
alias ll='ls -la'
alias lsa='ls -a'

# Mejoras de uso
alias rm='rm -iv'
alias mv='mv -iv'
alias cp='cp -iv'
alias ..='cd ..'
alias ...='cd ../..'

# Acortar comandos
alias n='nvim'
alias untar='tar xvf'
